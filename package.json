{
  "name": "edge-other-plugins",
  "version": "0.1.0",
  "private": false,
  "description": "A place for special Edge plugins which do not fall into a category for standard plugin types.",
  "repository": "git@github.com:EdgeApp/edge-other-plugins.git",
  "license": "MIT",
  "author": "Edge <info@edge.app>",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "coverage": "nyc mocha && nyc report --reporter=cobertura --reporter=html",
    "fix": "eslint . --fix",
    "lib": "sucrase -q -t typescript,imports -d ./lib ./src",
    "lint": "eslint .",
    "precommit": "lint-staged && npm-run-all types test",
    "prepare": "husky install && npm-run-all clean -p lib types",
    "start": "node -r sucrase/register src/index.ts",
    "start.dev": "nodemon",
    "test": "mocha",
    "types": "tsc",
    "verify": "npm-run-all lint types"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint"
  },
  "dependencies": {
    "edge-core-js": "https://github.com/EdgeApp/edge-core-js.git#edcf18af521d9325ce8ad8f76d358b7eafdb5e52"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.15.0",
    "eslint-config-standard-kit": "^0.15.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json-files": "^1.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^7.1.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "sucrase": "^3.21.0",
    "typescript": "^4.6.4"
  }
}
